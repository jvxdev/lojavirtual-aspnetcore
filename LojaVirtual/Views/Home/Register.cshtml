@model Client

@{
    ViewData["title"] = "Cadastro";
}

<form asp-action="Register" asp-controller="Home" method="post">

    <main role="main">
        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6 center">
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a class="float-right btn btn-outline-primary mt-1" asp-action="login" asp-controller="Home">Já tenho uma conta!</a>
                                <h4 class="card-title mt-2 font-weight-light">Faça teu cadastro</h4>
                            </header>
                            <article class="card-body">
                                <div class="form-group">
                                    <label for="name">Nome</label>
                                    <input type="text" asp-for="Name" id="name" name="name" class="form-control" placeholder="Nome completo.">
                                    <span asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <label for="birthdate">Data de nascimento</label>
                                    <input type="date" asp-for="BirthDate" id="birthdate" name="birthdate" class="form-control" placeholder="">
                                    <span asp-validation-for="BirthDate"></span>
                                </div>
                                <div class="form-group mb-0">
                                    <label>Sexo</label>
                                    <br />
                                    <label class="form-check form-check-inline">
                                        <input type="radio" asp-for="Sex" class="form-check-input" value="M">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input type="radio" asp-for="Sex" class="form-check-input" value="F">
                                        <span class="form-check-label"> Feminino </span>
                                    </label>
                                    <span asp-validation-for="Sex"></span>
                                </div>
                                <div class="form-group">
                                    <label for="cpf">CPF</label>
                                    <input type="text" asp-for="CPF" class="form-control" placeholder="Seu CPF" maxlength="15">
                                    <span asp-validation-for="CPF"></span>
                                </div>
                                <div class="form-group">
                                    <label for="phone">Telefone</label>
                                    <input type="text" asp-for="Phone" name="phone" data class="form-control phone" placeholder="Seu melhor número" maxlength="12">
                                    <span asp-validation-for="Phone"></span>
                                </div>
                                <div class="form-group">
                                    <label for="email">E-mail</label>
                                    <input type="email" asp-for="Email" id="email" name="email" class="form-control" placeholder="exemplo@email.com">
                                    <span asp-validation-for="Email"></span>
                                    <small class="form-text text-muted">
                                        Nunca compartilharemos seu e-mail com
                                        ninguém.
                                    </small>
                                </div>
                                <div class="form-group">
                                    <label for="password">Senha</label>
                                    <input type="password" asp-for="Password" id="password" name="password" class="form-control" placeholder="**********" />
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div>
                                <small class="text-muted">
                                    Ao clicar em Cadastrar, você confirma que aceita nossos <b>Termos de Uso</b> <br> e nossa <b>Política de Privacidade</b>.
                                </small>
                            </article>
                            <div class="border-top card-body text-center">Já tem uma conta? <a asp-action="Login" asp-controller="Home">Clique aqui para entrar!</a></div>
                        </div>

                    </div>
                </aside>
            </div>
        </section>
    </main>

</form>

