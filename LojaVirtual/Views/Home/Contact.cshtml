@{
    ViewData["Title"] = "Contato";
    LojaVirtual.Models.Contact contact = (LojaVirtual.Models.Contact)ViewData["CONTATO"]; 
}

<main role="main">
    <br />
    <br />
    <div class="container">
        <div class="row">
            <aside class="col-md-6">
                <h4 class="subtitle-doc display-4 mb-3">
                    Nossos contatos.
                </h4>
                <div id="code_desc_simple">
                    <div class="box">
                        <dl>
                            <dt>Devolução/Garantia: </dt>
                            <dd>devolucao@lojavirtual.com.br</dd>
                        </dl>
                        <dl>
                            <dt>Televendas: </dt>
                            <dd>(61) 4000-2000</dd>
                        </dl>
                        <dl>
                            <dt>SAC:</dt>
                            <dd>sac@lojavirtual.com.br</dd>
                        </dl>
                    </div>
                </div>
            </aside>
            <aside class="col-sm-6">

                <h4 class="subtitle-doc display-4 mb-3">
                    Fale conosco!
                </h4>
                <div>

                    <article class="card">
                        <div class="card-body p-5">

                            @{ await Html.RenderPartialAsync("~/Views/Shared/_Message.cshtml"); }

                            <form role="form" method="post" action="/Home/ContactPost">
                                <div class="form-group">
                                    <label for="nome">Nome</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                                        </div>
                                        <input type="text" class="form-control" id="name" name="name" placeholder="Digite seu nome aqui"
                                               required="" value="@(contact != null ? contact.Name : "")">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="email">E-mail</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-at"></i></span>
                                        </div>
                                        <input type="text" class="form-control" id="email" name="email" placeholder="Seu e-mail"
                                               value="@(contact != null ? contact.Email : "")">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="texto"><span class="hidden-xs">Texto</span> </label>
                                            <div class="form-inline">
                                                <textarea class="form-control" id="text" name="text" style="width:100%" placeholder="Digite sua mensagem aqui">@(contact != null ? contact.Menssage : "")</textarea>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button class="subscribe btn btn-primary btn-block" type="submit"> Enviar </button>
                            </form>
                        </div>
                    </article>

                </div>

            </aside>
        </div>
    </div>
</main>