@model Product

<div class="container">
    <div class="col-md-12">
        <section id="product_detail">
            <h2 class="title-doc display-4 my-5">Detalhes do produto</h2>
            <div id="code_prod_detail">
                <div class="card">
                    <div class="row no-gutters">
                        <aside class="col-sm-5 border-right">
                            <article class="gallery-wrap">
                                <div class="img-big-wrap">
                                    @if (Model.Images != null && Model.Images.Count > 0)
                                    {
                                        <div> <a href="@Model.Images.ElementAt(0).Path" data-fancybox><img src="@Model.Images.ElementAt(0).Path"></a></div>
                                    }
                                    else
                                    {
                                        <div> <a href="~/img/img-product-example.png" data-fancybox><img src="~/img/img-product-example.png"></a></div>
                                    }
                                </div>
                                <div class="img-small-wrap">
                                    @if (Model.Images != null && Model.Images.Count > 0)
                                    {
                                        @foreach (Image image in Model.Images)
                                        {
                                            <div class="item-gallery"> <img src="@image.Path"></div>
                                        }

                                    }
                                </div>
                            </article>
                        </aside>
                        <aside class="col-sm-7">
                            <article class="p-5">
                                <h3 class="title mb-3">@Model.Name</h3>

                                <div class="mb-3">
                                    <var class="price h3 text-warning">
                                        <span class="currency"></span><span class="num">@Model.Price.ToString("C")</span>
                                    </var>
                                    <span>/unid</span>
                                </div>
                                <dl>
                                    <dt>Descrição</dt>
                                    <dd>
                                        <p>
                                            @Model.Description
                                        </p>
                                    </dd>
                                </dl>

                                <dl class="row">
                                    <dt class="col-sm-3">Peso</dt>
                                    <dd class="col-sm-9">@Model.Weight (kg) </dd>

                                    <dt class="col-sm-3">Largura</dt>
                                    <dd class="col-sm-9">@Model.Width (cm) </dd>

                                    <dt class="col-sm-3">Altura</dt>
                                    <dd class="col-sm-9">@Model.Height (cm) </dd>

                                    <dt class="col-sm-3">Comprimento</dt>
                                    <dd class="col-sm-9">@Model.Lenght (cm) </dd>

                                    <dt class="col-sm-3">Em estoque</dt>
                                    <dd class="col-sm-9">@Model.Amount (unidades) </dd>
                                </dl>
                                <hr>
                                <a asp-controller="ShoppingKart" asp-action="AddItem" asp-route-id="@Model.Id" class="btn  btn-outline-primary"> <i class="fas fa-shopping-cart"></i> Adicionar ao carrinho </a>
                            </article>
                        </aside>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

