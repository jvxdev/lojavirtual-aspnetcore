@{
    ViewData["Title"] = "Poxa... :(";
}

<div class="container">
    <div class="row text-center">
        <div class="col-md-12">
            <h1 class="display-4 mt-5">@ViewBag.StatusCode</h1>

            <p class="my-4">
                <strong>Ocorreu um erro... Status: @ViewBag.Message</strong>
            </p>

            <a asp-controller="Home" asp-action="Index" class="btn btn-dark p-3">Clique aqui para voltar a navegar</a>

            <div>
                <img src="~/img/img-generic-error.jpg" width="1000px" alt="Error" />
            </div>
        </div>
    </div>
</div>