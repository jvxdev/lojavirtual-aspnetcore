@model PagedList<LojaVirtual.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

@if (Model.Count > 0)
{

    <a asp-action="Create" class="btn btn-success my-3">Cadastrar</a>

    <div class="table-responsive">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Categoria pai</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
                {
                    <tr>
                        <th scope="row">@category.Id</th>
                        <td>@category.Name</td>
                        <td>@category.FatherCategoryId</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-info">Editar</a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <p>Nenhum produto cadastrado.</p>
}

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))