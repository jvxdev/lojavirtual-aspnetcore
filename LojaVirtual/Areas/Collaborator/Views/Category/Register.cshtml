@model LojaVirtual.Models.Category

@{
    ViewData["Title"] = "Cadastrar nova categoria";
}

<h1 class="my-4">Cadastrar nova categoria</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label">Nome<span style="color: red"><b>*</b></span></label>
        <input asp-for="Name" class="form-control" placeholder="Digite o nome da categoria">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
         <label for="slug" asp-for="Slug" class="form-label">Slug<span style="color: red"><b>*</b></span></label>
         <input id="slug" asp-for="Slug" class="form-control" placeholder="Digite o slug da categoria">
         <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
         <label asp-for="FatherCategoryId"></label>
         <select asp-for="FatherCategoryId" class="form-control" asp-items="@ViewBag.Categories">
             <option value="">Selecionar</option>
         </select>
         <span asp-validation-for="FatherCategoryId" class="text-danger"></span>
    </div>
          <button type="submit" class="btn btn-secondary">Cadastrar</button>
          <button asp-action="Index" class="btn btn-primary">Voltar</button>
</form>