@model LojaVirtual.Models.Category

@{
    ViewData["Title"] = "Editar categoria";
}

<h1 class="my-4">Editar categoria</h1>

<form method="post" id="form-category">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Nome<span style="color: red"><b>*</b></span></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug">Slug<span style="color: red"><b>*</b></span></label>
        <input asp-for="Slug" readonly class="form-control">
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FatherCategoryId"></label>
        <select asp-for="FatherCategoryId" class="form-control" asp-items="@ViewBag.Categories">
            <option value="">Selecionar</option>
        </select>
        <span asp-validation-for="FatherCategoryId" class="text-danger"></span>
    </div>

    <button asp-action="Index" class="btn btn-secondary">Voltar</button>
    <button type="submit" class="btn btn-success">Salvar</button>
</form>