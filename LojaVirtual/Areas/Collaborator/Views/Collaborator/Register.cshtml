@model LojaVirtual.Models.Collaborator

@{
    ViewData["Title"] = "Cadastrar novo colaborador";
}

<h1 class="my-4">Cadastrar novo colaborador</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Digite o nome">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="Digite o e-mail">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button asp-action="Index" asp-controller="Collaborator" class="btn btn-secondary">Voltar</button>
    <button type="submit" class="btn btn-success">Cadastrar</button>
</form>