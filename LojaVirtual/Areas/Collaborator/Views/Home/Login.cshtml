@model Collaborator

@{
    ViewData["title"] = "Login do Colaborador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main">
    <br />
    <br />
    <section class="container my-5">
        <aside class="col-sm-5 center">
            <div class="card">
                <article class="card-body">
                    <a class="float-right btn btn-outline-primary" asp-action="register" asp-controller="Home">Criar conta</a>
                    <h4 class="card-title mb-4 mt-1">Login de Colaborador</h4>
                    @if (TempData["MSG_S"] != null)
                    {
                        <p class="alert alert-success">@TempData["MSG_S"]</p>
                    }
                    <form method="post">
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input asp-for="Email" id="email" class="form-control" placeholder="exemplo@email.com" type="email" required>
                        </div>
                        <div class="form-group">
                            <a class="float-right" href="#">Esqueceu sua senha?</a>
                            <label for="password">Senha</label>
                            <input asp-for="Password" id="password" class="form-control" placeholder="**********" type="password" required>
                        </div>
                        @if (TempData["MSG_E"] != null)
                        {
                            <p class="alert alert-danger text-center">@TempData["MSG_E"]</p>
                        }
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block" asp-action="Login" asp-controller="Home"> Entrar </button>
                        </div>
                    </form>
                </article>
            </div>
        </aside>
    </section>
</main>