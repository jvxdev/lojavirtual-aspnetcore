@model Client

@{
    ViewData["title"] = "Entrar";
}

<main role="main">
    <br />
    <br />
    <section class="container my-5">
        <aside class="col-sm-5 center">
                <div class="card">
                    <article class="card-body">
                        <a class="float-right btn btn-outline-primary" asp-controller="Client" asp-action="Register" asp-route-returnUrl="@Context.Request.Query["returnUrl"]">Criar conta</a>
                        <h4 class="card-title mb-4 mt-1 font-weight-light">Entre com sua conta!</h4>
                        <form method="post">
                            <div class="form-group">
                                <label for="email">E-mail</label>
                                <input asp-for="Email" id="email" class="form-control" placeholder="exemplo@email.com" type="email" required>
                            </div>
                            <div class="form-group">
                                <a class="float-right" asp-controller="Home" asp-action="RecoverPassword">Esqueceu sua senha?</a>
                                <label for="password">Senha</label>
                                <input asp-for="Password" id="password" class="form-control" placeholder="**********" type="password" required>
                            </div>

                            @{ await Html.RenderPartialAsync("~/Views/Shared/_Message.cshtml"); }

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Entrar </button>
                            </div>
                        </form>
                    </article>
                </div>
        </aside>
    </section>
</main>