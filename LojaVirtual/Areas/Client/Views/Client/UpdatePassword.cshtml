@model Client

@{
    ViewData["Title"] = "Alterar minha senha";
}

<form method="post">
    <main role="main">
        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6 center">
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <h4 class="card-title mt-2 font-weight-light">Alterar senha</h4>
                            </header>
                            <article class="card-body">

                                @{ await Html.RenderPartialAsync("~/Views/Shared/_Message.cshtml"); }

                                <div class="form-group">
                                    <label for="password">Nova senha</label>
                                    <input type="password" asp-for="Password" id="password" name="password" class="form-control" placeholder="**********" />
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <label for="passwordConfirmation">Confirme a sua nova senha</label>
                                    <input type="password" asp-for="PasswordConfirmation" id="passwordConfirmation" name="passwordConfirmation" class="form-control" placeholder="**********" />
                                    <span asp-validation-for="PasswordConfirmation"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Salvar </button>
                                </div>
                            </article>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>

